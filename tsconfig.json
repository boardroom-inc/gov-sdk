{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2019",
    "lib": [ "ESNext", "DOM" ],
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "paths": {
      "@boardroom/*": ["packages/*/"]
    },
  },
  "include": [
    "./packages/*/src/**/*.ts"
  ]
}
